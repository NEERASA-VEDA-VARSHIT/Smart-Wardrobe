{
  "name": "smart-wardrobe-backend",
  "version": "1.0.0",
  "description": "Smart Wardrobe Backend API - Production Ready",
  "license": "MIT",
  "author": "Smart Wardrobe Team",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build": "echo 'Backend build complete'",
    "test": "jest --testEnvironment=node",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "db:seed": "node scripts/seed.js",
    "db:index": "node scripts/createIndexes.js",
    "db:migrate": "node scripts/migrate.js",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "health": "curl http://localhost:8000/health"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.10.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "wardrobe",
    "fashion",
    "api",
    "nodejs",
    "express",
    "mongodb"
